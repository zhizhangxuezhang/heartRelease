<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs.heart_release_01.dao.CollectionsDao">

    <resultMap id="BaseResultMap" type="com.cs.heart_release_01.entity.Collections">
        <!--@Table collections-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="masterId" column="master_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, user_id, master_id
        from heart_release.collections
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, user_id, master_id
        from heart_release.collections
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_id, master_id
        from heart_release.collections
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="masterId != null">
                and master_id = #{masterId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into heart_release.collections(user_id, master_id)
        values (#{userId}, #{masterId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update heart_release.collections
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="masterId != null">
                master_id = #{masterId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from heart_release.collections where id = #{id}
    </delete>

</mapper>